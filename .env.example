# Application Settings
APP_NAME=IOC Agentic System
APP_VERSION=1.0.0
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8862
WORKERS=4

# Database
POSTGRES_USER=ioc_user
POSTGRES_PASSWORD=change_this_password_in_production
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ioc_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET_KEY=change_this_secret_key_in_production_use_strong_random_string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Keycloak (Optional)
KEYCLOAK_URL=
KEYCLOAK_REALM=
KEYCLOAK_CLIENT_ID=
KEYCLOAK_CLIENT_SECRET=

# LLM Configuration
LLM_PROVIDER=gemini
# Options: gemini, openai, anthropic

# Google Gemini
GOOGLE_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Cache
CACHE_TTL=300
CACHE_ENABLED=true

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# IOC API Configuration
IOC_API_BASE_URL=https://ioc-api.gov.vn/api/v1
IOC_API_KEY=your_ioc_api_key_here
IOC_API_TIMEOUT=30
